<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.gpacalculatorbuilder.Add_Course_Controller"
            prefWidth="600" prefHeight="550">

    <top>
        <VBox alignment="CENTER" spacing="5" BorderPane.alignment="CENTER">
            <Label text="Add Course Details" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Fill the fields below to add a course." style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="12">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <HBox spacing="10">
                <Label text="Course Name:" prefWidth="120"/>
                <TextField fx:id="courseNameField" promptText="Enter course name" prefWidth="300"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Course Code:" prefWidth="120"/>
                <TextField fx:id="courseCodeField" promptText="Enter course code" prefWidth="300"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Course Credit:" prefWidth="120"/>
                <TextField fx:id="courseCreditField" promptText="e.g., 3" prefWidth="300"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Teacher 1:" prefWidth="120"/>
                <TextField fx:id="teacher1Field" promptText="Teacher name" prefWidth="300"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Teacher 2:" prefWidth="120"/>
                <TextField fx:id="teacher2Field" promptText="Teacher name" prefWidth="300"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Grade:" prefWidth="120"/>
                <ComboBox fx:id="gradeCombo" prefWidth="300">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="A+"/>
                            <String fx:value="A"/>
                            <String fx:value="A-"/>
                            <String fx:value="B+"/>
                            <String fx:value="B"/>
                            <String fx:value="B-"/>
                            <String fx:value="C+"/>
                            <String fx:value="C"/>
                            <String fx:value="D+"/>
                            <String fx:value="D"/>
                            <String fx:value="F"/>
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>

            <Button fx:id="addCourseButton"
                    text="Add Course"
                    onAction="#handleAddCourse"
                    style="-fx-font-size: 15px; -fx-background-color: #3366ff; -fx-text-fill: white;"
                    prefWidth="200"
                    alignment="CENTER"/>

            <Label fx:id="creditStatusLabel"
                   text="Total Credits Entered: 0"
                   style="-fx-font-size: 14px; -fx-text-fill: #444;"/>
        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Button fx:id="calculateButton"
                    text="Calculate GPA"
                    onAction="#handleCalculateGPA"
                    disable="true"
                    style="-fx-font-size: 18px; -fx-background-color: #28a745; -fx-text-fill: white;"
                    prefWidth="250"/>

            <Button text="Back to Home"
                    onAction="#switchToMainPage"
                    style="-fx-background-color: #999; -fx-text-fill: white;"
                    prefWidth="200"/>
        </VBox>
    </bottom>

</BorderPane>
