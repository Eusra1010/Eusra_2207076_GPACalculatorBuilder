<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="600" stylesheets="@styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.gpacalculatorbuilder.Add_Course_Controller">

    <top>
        <VBox alignment="CENTER" spacing="5">
            <Label style="-fx-font-size:26px; -fx-font-weight:bold;" text="Add Course Details" />
            <Label text="Fill all the fields below" />
        </VBox>
    </top>

    <center>
        <VBox spacing="14">
            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

            <HBox spacing="10">
                <Label prefWidth="150" text="Total Credits:" />
                <TextField fx:id="totalCreditInputField" prefWidth="270" promptText="e.g. 20" />
            </HBox>

            <HBox spacing="10">
                <Label prefWidth="150" text="Course Name:" />
                <TextField fx:id="courseNameField" prefWidth="270" promptText="Enter Course name" />
            </HBox>

            <HBox spacing="10">
                <Label prefWidth="150" text="Course Code:" />
                <TextField fx:id="courseCodeField" prefWidth="270" promptText="e.g. CSE XXXX" />
            </HBox>

            <HBox spacing="10">
                <Label prefWidth="150" text="Course Credit:" />
                <TextField fx:id="courseCreditField" prefWidth="270" promptText="e.g. 4" />
            </HBox>

            <HBox spacing="10">
                <Label prefWidth="150" text="Teacher 1:" />
                <TextField fx:id="teacher1Field" prefWidth="270" promptText="Enter teacher's name" />
            </HBox>

            <HBox spacing="10">
                <Label prefWidth="150" text="Teacher 2:" />
                <TextField fx:id="teacher2Field" prefWidth="270" promptText="Enter teacher's name" />
            </HBox>

            <HBox spacing="10">
                <Label prefWidth="150" text="Grade:" />
                <ComboBox fx:id="gradeCombo" prefWidth="270">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="A+" />
                            <String fx:value="A" />
                            <String fx:value="A-" />
                            <String fx:value="B+" />
                            <String fx:value="B" />
                            <String fx:value="B-" />
                            <String fx:value="C+" />
                            <String fx:value="C" />
                            <String fx:value="D+" />
                            <String fx:value="D" />
                            <String fx:value="F" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>

            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="addCourseButton" onAction="#handleAddCourse" styleClass="blue-btn" text="Add Course" />
                <Button onAction="#handleReset" styleClass="reset-btn" text="Reset" />
            </HBox>

            <Label fx:id="creditStatusLabel" text="Total Credits Entered: 0" />
        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <padding><Insets top="20" /></padding>

            <Button fx:id="calculateButton" disable="true" onAction="#handleCalculateGPA" prefWidth="250" styleClass="green-btn" text="Calculate GPA" />

            <Button onAction="#switchToMainPage" prefWidth="200" styleClass="play-btn" text="Back to Home" />
        </VBox>
    </bottom>

</BorderPane>
