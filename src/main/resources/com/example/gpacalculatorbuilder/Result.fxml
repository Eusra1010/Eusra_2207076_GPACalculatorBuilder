<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            stylesheets="@styles.css"
            prefWidth="700" prefHeight="600"
            fx:controller="com.example.gpacalculatorbuilder.Result_Controller">

    <top>
        <VBox alignment="CENTER" spacing="5">
            <Label text="Your GPA Result" style="-fx-font-size:26px; -fx-font-weight:bold;"/>
            <Label text="Summary of all entered courses"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="18">
            <padding><Insets top="20" right="30" bottom="20" left="30"/></padding>

            <TableView fx:id="resultTable" prefHeight="380">
                <columns>
                    <TableColumn fx:id="nameCol" text="Course Name" prefWidth="140"/>
                    <TableColumn fx:id="codeCol" text="Course Code" prefWidth="100"/>
                    <TableColumn fx:id="creditCol" text="Credit" prefWidth="80"/>
                    <TableColumn fx:id="t1Col" text="Teacher 1" prefWidth="130"/>
                    <TableColumn fx:id="t2Col" text="Teacher 2" prefWidth="130"/>
                    <TableColumn fx:id="gradeCol" text="Grade" prefWidth="100"/>
                </columns>
            </TableView>

            <Label fx:id="gpaLabel" text="Your GPA:" style="-fx-font-size:20px; -fx-font-weight:bold;"/>
        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="12">
            <padding><Insets top="10" bottom="20"/></padding>

            <HBox spacing="20" alignment="CENTER">
                <Button text="Recalculate" onAction="#handleRecalculate" styleClass="play-btn" prefWidth="150"/>
                <Button text="Clear" onAction="#handleClear" styleClass="reset-btn" prefWidth="120"/>
                <Button text="Back to Home" onAction="#handleBackToHome" styleClass="green-btn" prefWidth="150"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
